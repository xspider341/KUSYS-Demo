@{
    ViewData["Title"] = "Create Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Create Student</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateStudent" method="post">

            <div class="form-group">
                <label id="FirstName" class="control-label"></label>
                <input id="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label id="LastName" class="control-label"></label>
                <input id="LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label id="BirthDate" class="control-label"></label>
                <input id="BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                <label id="CourseId" class="control-label"></label>
                @* <input id="CourseId" class="form-control" />*@
                <select id="CourseId" asp-items="@ViewBag.courses" class="form-control"></select>
            </div>
            <div class="form-group">
                <div class="form-check form-switch" style="margin-top: 15px;">
                    <input class="form-check-input" style="height:30px; width: 4em;" type="checkbox" onclick="IsUserChange()" id="flexSwitchCheckChecked">
                    <label class="form-check-label" for="flexSwitchCheckChecked" style="margin:5px;">Is User</label>
                </div>

            </div>
            <div id="userarea" style="display:none;">
                <div class="form-group">
                    <label id="UserName" class="control-label"></label>
                    <input id="UserName" class="form-control" />
                </div>
                <div class="form-group">
                    <label id="Password" class="control-label"></label>
                    <input id="Password" class="form-control" />
                </div>
            </div>


            <div class="form-group" style="margin-top: 25px;">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="studentslist">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    }

<script>
    function IsUserChange() {
        $("#userarea").toggle();
    }
</script>
